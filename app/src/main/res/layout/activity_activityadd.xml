<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityadd">

	/*se creo este layout/vista para poder agregar la asignatura y los demas campos*/

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="420dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="300dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/book"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_Asig"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Asignatura"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/editText_Desc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/editText_prof"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Profesor"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/editText_dia"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Día"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/editText_hora"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Hora"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/editText_ProxTrab"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Fecha entrega próxima tarea"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:text="Agregar"/>

                <Button
                    android:id="@+id/btncancelar"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:text="Cancelar"
                    android:onClick="CloseView_OnClick"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>